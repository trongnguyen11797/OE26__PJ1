mixin bannerRight(i, h3, p) 
    .banner__text
        .banner__text--left
            i(class= i)
        .banner__text--right
            h3= h3
            p= p
mixin details(span, i1, i2, menu)
    .footer__top--title.grid--title
        i.fas.fa-th-large.grid--icon
            span= span    
        .btn__flex
            if(menu== true)
                i(class= i1)
                i(class= i2)
            else
                .btn__flex--left
                    - var item = ['Máy khoan', 'Máy in 3D', 'Máy CNC', 'Máy tiện', 'Máy khác']
                    each i in item
                        a(href="#")= i     
                .btn__flex--right
                    i(class= i1)
                    i(class= i2)
mixin detailsMenu(i, i2, ...a) 
    .details__flex--left--menu--column
        i(class= 'fas fa-th-large')
            span(href="#") Máy khoan, cắt CNC
        i(class= 'fas fa-caret-down')
    each item in a
        .details__flex--left--menu--column.details__flex--left--menu--column--none
            i(class= i)
                span(href="#")= item
            i(class= i2)
mixin detailsMenuItem(TF, ...src)
    if(TF == true)
        each item in src
            .details__grid--item
                .grid--item--img.icon__cart
                    img(src= item alt="Ảnh img sản phẩm" class="resize-img" id='getImg')
                    .radius
                        i( onclick='addTable(this)').fas.fa-shopping-cart
                .grid--item--text
                    p(id='getPrice') 1,500,000 Đ
                    p(id='getName') MÁY KHOAN BLACK DECKER
                    P
                        - var item1 = ['fa fa-star']  
                        - for(var i=0; i< 5; i++) {
                            i(class= item1)
                        - }
                        span (12 Đánh giá)
                .grid--item--button
                    button(onclick="window.location='shoppingcar.html' " id='btnTotal') Mua ngay
                    button Xem chi tiết
    else 
        each item in src
            .details__grid--item.details__hmv--grid
                .grid--item--img
                    img(src= item alt="Ảnh img sản phẩm" class="resize-img")
                .details__hmv--right
